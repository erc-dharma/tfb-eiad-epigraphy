							              <gap reason="illegible" quantity="3" unit="character"/>
						            </lem>
						            <rdg source="eiad-bibl:Sircara">yatisamaṇa-</rdg>
					          </app>
					          <app loc="3">
						            <lem>koṁḍa <gap reason="illegible" quantity="2" unit="character"/>
						            </lem>
						            <rdg source="eiad-bibl:Sircara">koḍa<unclear>rakasa</unclear>
						            </rdg>
					          </app>
					          <app loc="4">
						            <lem>
							              <unclear>chā</unclear>
							              <gap reason="illegible" quantity="1" unit="character"/>
							              <unclear>khaṁ</unclear>
