						            <rdg source="eiad-bibl:Sircare">°ācariyana<unclear>ṁ</unclear>
								theriyāna<unclear>ṁ</unclear>
						            </rdg>
					          </app>
					          <app loc="2">
						            <lem>-vīhāra-</lem>
						            <rdg source="eiad-bibl:Sircare">-vihāra-</rdg>
					          </app>
					          <app loc="2">
